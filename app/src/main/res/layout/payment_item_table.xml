<?xml version="1.0" encoding="utf-8"?>
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:id="@+id/tableLayout3">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/tv_PIMonth"
            android:width="32dp"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:layout_gravity="top|left"
            style="@style/mainTextMainRow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_PIPayment"
            android:layout_column="1"
            android:text="M"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/mainTextMainRow"
            android:layout_gravity="top|left"
            android:gravity="right"
            android:width="74dp"
            android:layout_weight="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/tv_PIForCredit"
            android:layout_column="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/mainTextMainRow"
            android:gravity="right"
            android:width="73dp"
            android:layout_weight="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/tv_PIPaymentToPercents"
            android:layout_column="3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/mainTextMainRow"
            android:layout_gravity="top|left"
            android:gravity="right"
            android:width="73dp"
            android:layout_weight="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="M"
            android:id="@+id/tv_PIExtraPayment"
            android:layout_column="4"
            style="@style/mainTextMainRow"
            android:gravity="right"
            android:width="73dp"
            android:layout_weight="4" />



    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:id="@+id/tv_PILeftToPay"
                android:layout_column="2"
                android:layout_span="2"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_weight="8"
                android:width="146dp" />

        <TextView
            style="@style/mainTextMainRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView27"
            android:layout_column="4"
            android:gravity="right"
            android:width="73dp"
            android:layout_weight="4" />

    </TableRow>


</TableLayout>
